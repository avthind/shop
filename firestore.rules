rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Carts collection - users can only access their own cart
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Wishlists collection - users can only access their own wishlist
    match /wishlists/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Orders collection - users can only create and read their own orders
    match /orders/{orderId} {
      // Users can create orders (userId must match authenticated user)
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can only read their own orders
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Orders cannot be updated or deleted after creation (immutable)
      allow update, delete: if false;
    }
    
    // Profiles collection - users can only access their own profile
    match /profiles/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
