rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Products collection - public read, admin write
    match /products/{productId} {
      // Anyone can read products (public)
      allow read: if true;
      
      // Only admins can create, update, or delete products
      allow create, update, delete: if isAdmin();
    }
    
    // Carts collection - users can only access their own cart
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Wishlists collection - users can only access their own wishlist
    match /wishlists/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Authenticated users can create orders with their userId
      // Guests can create orders with userId = null
      allow create: if isAuthenticated() && 
                       (request.resource.data.userId == request.auth.uid || 
                        request.resource.data.userId == null);
      
      // Users can read their own orders, admins can read all orders
      // Note: Guest order tracking will be handled server-side via API route
      // for security (email verification)
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only admins can update order status
      allow update: if isAdmin() && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']);
      
      // Orders cannot be deleted
      allow delete: if false;
    }
    
    // Profiles collection
    match /profiles/{userId} {
      // Users can read/write their own profile
      // Admins can read all profiles (to check admin status)
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
